

<div class="container">

	<div class="row">
      <h1 class="col-lg-3">User info</h1>
    </div>

<%= form_for (@user) do |f| %>

    <div class="form-group has-icon">

	<label>Name</label>
	<%= f.text_field :name %>
	<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="form-group has-icon">
	<label>Image</label>
	<%= f.attachment_field :profile_image %>
    </div>

    <div class="form-group has-icon">

	<label>Introduction</label>
	<%= f.text_field :introduction %>
    </div>

	<%= f.submit "Update User" %>
<% end %>

<%= form_for (@user) do |f| %>
 <% if @user.errors.any? %>
  <p><%= @user.errors.count %>件のerror</p>
   <ul>
    <% @user.errors.full_messages.each do |message| %>
     <il><%= message %></il>
    <% end %>
   </ul>
 <% end %>
<% end %>
</div>


